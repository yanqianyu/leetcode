#include <iostream>
#include <math.h>
using namespace std;
class Solution {
public:
    int arrangeCoins(int n) {
        return (sqrt(2*(long)n+0.25)-0.5);
    }
};
int main(){
    Solution s;
    cout<<s.arrangeCoins(8)<<endl;
    return 0;
}
