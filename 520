#include <iostream>
using namespace std;
class Solution {
public:
    bool detectCapitalUse(string word) {
        if(word.size()==1)
            return true;
        bool flag=true;
        if(word[1]>='A'&&word[0]<='Z'){
            if(word[1]>='A'&&word[1]<='Z'){
                for(int i=2;i<word.size();i++){
                    if(word[i]>='a'&&word[i]<='z'){
                        flag=false;
                        break;
                    }
                }
                if(flag==false)
                    return flag;
            }
            else if(word[1]>='a'&&word[1]<='z'){
                for(int i=2;i<word.size();i++){
                    if(word[i]>='A'&&word[i]<='Z'){
                        flag=false;
                        break;
                    }
                }
                if(flag==false)
                    return flag;
            }
        }
        else if(word[0]>='a'&&word[0]<='z'){
            for(int i=1;i<word.size();i++){
                if(word[i]>='A'&&word[i]<='Z'){
                    flag=false;
                    break;
                }
            }
            if(flag==false)
                return flag;
        }
        return flag;
    }
};
